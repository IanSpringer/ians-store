{% layout none %}

	{
			"title": {{ collection.title | json }},
			"products": [
				{% for product in collection.products %}
				{
					"title": {{ product.title | json }},
					"price": {{ product.price | json }},
					"img": {{ product.featured_image | img_url: '400x' | json }},
					"shell": "{% for tag in product.tags %}{% if tag contains 'shell:'%}{{ tag | remove: 'shell:'}}{% endif %}{% endfor %}",
					"color": "{% for tag in product.tags %}{% if tag contains 'color:'%}{{ tag | remove: 'color:'}}{% endif %}{% endfor %}"
				}{% unless forloop.last %},{% endunless %}
				{% endfor %}
			]
	}


