{% layout none %}

	{
			"title": {{ collection.title | json }},
			{% assign collectionList = '' %}
			{% for collection in linklists.collection-sidebar.links %}
				{% assign collectionList = collectionList | append: collection.title | append: ':' | append: collection.url | append: ',' %}
			{% endfor%}
			"collections": {{ collectionList | split: ',' | json }},
			"products": [
				{% for product in collection.products %}
				{% assign sizeTags = '' %}
				{% assign shellTags = '' %}
				{% assign colorTags = '' %}
					{% for tag in product.tags %}
						{% if tag contains 'size:' %}
							{% assign sizeTags = sizeTags | append: tag | append: ',' | remove: 'size:' %}
						{% elsif tag contains 'shell:' %}
							{% assign shellTags = shellTags | append: tag | append: ',' | remove: 'shell:' %}
						{% elsif tag contains 'color:' %}
							{% assign colorTags = colorTags | append: tag | append: ',' | remove: 'color:' %}
						{% endif %}
					{% endfor %}
				{
					"title": {{ product.title | json }},
					"price": {{ product.price | money | json }},
					"img": {{ product.featured_image | img_url: '400x' | json }},
					"shell": {{ shellTags | split: ',' | json  }},
					"color":{{ colorTags | split: ',' | json  }},
					"size": {{ sizeTags | split: ',' | json  }}
				}{% unless forloop.last %},{% endunless %}
				{% endfor %}
			]
	}


