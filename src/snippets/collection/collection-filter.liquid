<div class="collection-controls">
	<div class="collection-filters">
		<div class="filter-wrap color" v-if="colorFilters.length">
			<label class="filter-label">Color</label>
			<button class="filter-btn " v-bind:class="{'is-active': filter.isActive }" v-on:click="filterProducts(filter) " v-for="filter in colorFilters" data-type="color" v-bind:value="filter.value">${ filter.value }</button>
		</div>
		<div class="filter-wrap shell" v-if="shellFilters.length">
			<label class="filter-label">Shell</label>
			<button class="filter-btn " v-bind:class="{'is-active': filter.isActive }" v-on:click="filterProducts(filter) " v-for="filter in shellFilters" data-type="shell" v-bind:value="filter.value">${ filter.value }</button>
		</div>
		<div class="filter-wrap size" v-if="sizeFilters.length">
			<label class="filter-label">Size</label>
			<button class="filter-btn " v-bind:class="{'is-active': filter.isActive }" v-on:click="filterProducts(filter) " v-for="filter in sizeFilters" data-type="size" v-bind:value="filter.value">${ filter.value } </button>
		</div>
		<button class="filter-reset" v-on:click="reset">Reset Filters</button>
	</div>
	<div class="collection-list">
		<label class="filter-label">Shop</label>
		<button class="filter-btn" v-for="collection in collectionList" v-on:click="clearState(collection.handle)">${ collection.title }</button>
	</div>
</div>